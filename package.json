{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for TS-Express projects",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanchew3/express-ts-boilerplate.git"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Cassie Chew",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryanchew3/express-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/ryanchew3/express-ts-boilerplate#readme",
  "dependencies": {
    "@graphql-mesh/cli": "^0.38.4",
    "@graphql-mesh/graphql": "^0.18.12",
    "@graphql-mesh/types": "^0.49.0",
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.3",
    "helmet": "^4.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12"
  }
}
